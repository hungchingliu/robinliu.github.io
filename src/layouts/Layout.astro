---
import '../styles/global.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-white text-slate-900 dark:bg-slate-950 dark:text-slate-100 font-sans antialiased min-h-screen flex flex-col">
		<nav class="w-full max-w-4xl mx-auto p-6 flex justify-between items-center sticky top-0 bg-white/80 dark:bg-slate-950/80 backdrop-blur-sm z-50">
			<a href="/" class="font-bold text-xl tracking-tighter hover:text-blue-600 transition-colors">Robin Liu</a>
			<div class="hidden sm:flex space-x-8 text-sm font-medium text-slate-500 dark:text-slate-400">
				<a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">About</a>
				<a href="/resume" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Resume</a>
				<a href="/projects" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Projects</a>
				<a href="/life" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Life</a>
			</div>
            <div class="sm:hidden text-sm font-medium text-slate-500">
                <a href="/resume">Menu</a>
            </div>
		</nav>

		<main class="w-full max-w-4xl mx-auto px-6 py-12 flex-grow">
			<slot />
		</main>
		
		<footer class="text-center text-slate-400 text-xs py-10 border-t border-slate-100 dark:border-slate-900 mt-auto">
			&copy; {new Date().getFullYear()} Robin Liu.
		</footer>
	</body>
</html>
<style is:global>
	html { font-family: 'Inter', sans-serif; }
</style>